.root {
  position: relative;
  overflow: hidden;
}

.light {
  position: absolute;
  width: 100px;
  height: 100px;
  border-radius: 100px;
  left: 0;
  top: 0;
  background-image: radial-gradient(rgba(255, 255, 255, 1), rgba(255, 255, 255, 0));
  display: none;
  &.show {
    display: block;
  }
}

.rootInner {
  position: absolute;
  width: 100%;
  height: 100%;
  backdrop-filter: blur(10px);
  background-color: rgba(255, 255, 255, .1);
  left: 0;
  top: 0;
}